<div class="panel panel-default">
  <div class="panel-body">
  <h1 class="page-header title_blog_post"><%= action %></h1>
    <div class="col-md-6 ">
      <%= form_for ([:admin, @blog_post]) do |f| %>
      <% if @blog_post.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
          <% @admin.errors.full_messages.each do |message| %>
          <ul>
            <li><%= message %></li>
          </ul>
          <% end %>
        </div>
        <% end %>

        <div class="form-group">
          <div class="col-md-12">
            <%= f.label "Título" %>
            <%= f.text_field :title, autofocus: true, class:"form-control", placeholder:"título do post" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12">
            <%= f.label "Imagem" %>
            <%= f.file_field :image, class:"form-control" %>
          </div>
        </div>
        <div class="form-group content">
          <div class="col-md-12">
            <%= f.label "Conteúdo" %>
            <%= f.bootsy_area :content, cols: 20, rows: 10, class:"form-control" %>
          </div>
        </div>
        <div class='btn-post row'>
          <div class="form-group col-md-4">
            <%= f.submit "Salvar", class:"btn btn-primary btn-block" %>
          </div>
          <div class="btn-back col-md-4">
            <%= link_to "Página principal", admin_blog_posts_path, class:"btn btn-secondary btn-block" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
